{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body">
  <h3>Cadastrar Produto</h3>

  <form action="/products" method="post">
    <div class="form-group">
      <label for="name">Nome</label>
      <input type="text" name="name" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="description">Descrição</label>
      <textarea name="description" class="form-control" required rows="4"></textarea>
    </div>
    <div class="form-group">
      <label for="noDiscountPrice">Preço sem desconto</label>
      <input type="text" id="noDiscountPrice" name="noDiscountPrice" class="form-control" required/>
    </div>
    <div class="form-group">
      <label for="discountPrice">Preço com desconto</label>
      <input type="text" id="discountPrice" name="discountPrice"  class="form-control" required/>
    </div>
    <div class="form-group">
      <label for="qty">Quantidade disponível</label>
      <input type="number" name="qty" class="form-control" required/>
    </div>
    <div class="form-group">
      <label for="category">Categoria</label>
      <select name="category" class="form-control" required>
        <option value="Tiaras">Tiaras</option>
      </select>
    </div>

    <button class="btn btn-primary" type="submit">Criar Produto</button>
  </form>
</div>

<script type="text/javascript">
  $("#noDiscountPrice").maskMoney({ 
    prefix: 'R$ ', 
    allowNegative: 
    true, thousands: '.', 
    decimal: ',', 
    affixesStay: false 
  });
  $("#discountPrice").maskMoney({ 
    prefix: 'R$ ', 
    allowNegative: 
    true, thousands: '.', 
    decimal: ',', 
    affixesStay: false 
  });
</script>
